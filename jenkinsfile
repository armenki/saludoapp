pipeline {
    agent any
    tools {
        maven 'Maven'
        jdk 'JDK17'
    }
    stages {
        stage('Clonar') {
            steps {
                git
                'https://github.com/armenki/saludoapp.git'
            }
        }
        stage('Compilar') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Probar') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Empaquetar') {
            steps {
                sh 'mvn package'
            }
        }
    }
    post {
        success {
            echo "ðŸŽ‰ El build fue exitoso"
        }
        failure {
            echo "ðŸ’¥ El build fallÃ³"
        }
    }
}